---

const {dades} = Astro.props;
const {autor, titol, imatge, id, oferta} = dades;

const colorDeFons = oferta ? "yellow" : "white";


---

<style define:vars={{colorDeFons}}>
    .llibre {
        display: inline-block;
        border: 1px solid blue;
        padding: 20px;
        background-color: var(--colorDeFons);
        margin: 20px;
        text-align: center;
    }

    img {
        heigth: 200px;
        margin: auto;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        font-size: 1.5rem;

    }

</style>

<div class="llibre">
    <img src={`/img/${imatge}`} alt={titol} />
    <h1>{titol}</h1>
    <h2>{autor}</h2>
    <a href={"/llibres/"+id} >MES INFO...</a>

</div>
